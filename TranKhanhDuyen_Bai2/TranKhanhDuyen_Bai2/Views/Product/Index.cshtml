@model IEnumerable<TranKhanhDuyen_Bai2.Models.Product>

<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Trang Web Bán Hàng</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		/*reset css để loại bỏ mặc định*/
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		/*Thiết lập font chung*/
		body {
			background-color: #222645;
			font-family: Arial, sans-serif;
			display: grid;
			margin: 0 auto;
		}

		/*Tiêu đề*/
		.header {
			background-color: #f897a8;
			color: white;
			padding: 20px;
			text-align: center;
			grid-column: 1 / span 2;
		}

		/*Danh sách sản phẩm*/
		.product-list {
			display: grid;
			grid-template-columns: repeat(3, 1fr); /* Hiển thị 3 sản phẩm trên mỗi hàng */
			gap: 20px; /* Khoảng cách giữa các sản phẩm */
			padding: 20px;
			grid-column: 1; /* Chỉ nằm ở cột đầu tiên */
		}

		.product-card {
			background-color: #fff; /* Màu nền trắng */
			border: 1px solid #ddd; /* Viền màu xám nhạt */
			border-radius: 5px; /* Bo tròn góc 5px */
			padding: 10px;
			width: 100%;
			text-align: center; /* Căn giữa nội dung */
		}

			.product-card img {
				max-width: 300px;
				height: 200px;
			}

		.sidebar {
			background-color: #199cff; /* Màu nền xanh dương */
			color: #fff; /* Chữ màu trắng */
			padding: 10px;
			grid-column: 2; /* Chỉ nằm ở cột thứ hai */
		}

		.social-icons {
			margin-top: 20px;
		}

			.social-icons a {
				color: #fff;
				text-decoration: none;
				display: block;
				margin-bottom: 10px;
			}

		}
	</style>
</head>
<body>

	<!-- Header -->
	<div class="header">
		<h1>Trang Web Bán Hàng</h1>
	</div>

	<!-- Product List -->
	<div class="container mt-4">
		<h2 class="text-center">Danh Sách Sản Phẩm</h2>
		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-md-4 mb-4">
					<div class="product-card">
						<img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/_p.jpg" : product.ImageUrl)" alt="@product.Name" style="max-width: 300px; height: 200px;">
						<h5>@product.Name</h5>
						<p>@product.Description</p>
						<p><strong>Giá:</strong> $@product.Price</p>
						<a asp-action="Display" asp-route-id="@product.Id">View</a>
						|
						<a asp-action="Update" asp-route-id="@product.Id">Edit</a> |
						<a asp-action="Delete" asp-route-id="@product.Id">Delete</a>

					</div>
				</div>
			}
		</div>
	</div>

	<!-- Footer -->
	<div class="footer">
		<div class="row">
			<div class="col">Cột 1<br>Nội dung cột 1.</div>
			<div class="col">Cột 2<br>Nội dung cột 2.</div>
			<div class="col">Cột 3<br>Nội dung cột 3.</div>
		</div>
	</div>

</body>
</html>
